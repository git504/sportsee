{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": ["plugins/markdown", "better-docs/component"],
  "templates": {
    "better-docs": {
      "name": "My React components",
      "cleverLinks": true,
      "monospaceLinks": true
    }
  },
  "opts": {
    "destination": "../",
    "recurse": true,
    "readme": "../README.md",
    "tutorials": "../tutorials"
  }
}
